<p id="notice"><%= notice %></p>

<h1><%= Coin.model_name.human(count: @coins.count) %></h1>
<!--
<h2><%= cookies[:curso]%></h2>
<h2><%= session[:curso]%></h2>
-->

<table class='table table-dark table-hover'>
  <thead>
    <tr>
      <!-- 3 maneiras diferentes de fazer a tradução -->
      <th><%= @coins.human_attribute_name(:description) %></th>
      <th><%= t('activerecord.attributes.coin.acronym') %></th>
      <th><%= t('links.url_image') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
      <!--  <td> <img src= '<%= coin.url_image %>' width = '30px' height = '30px' /> </td> HTML-->
        <td><%= image_tag(coin.url_image, size: '30x30')%>
        <td><%= link_to t('links.show'), coin %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('links.destroy'), coin, method: :delete, data: { confirm: t('messages.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new.coin'), new_coin_path, class:"btn btn-primary" %>
<%= link_to t('links.back'), welcome_index_path, class:"btn btn-secondary"%>
