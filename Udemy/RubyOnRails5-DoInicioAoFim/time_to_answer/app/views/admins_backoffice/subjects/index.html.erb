<!--<%= @admins.inspect %> Printando o valor completo da variável -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Listando Assuntos/Áreas</h1>
    </div>
</div>
<br>
<div class="row">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Descrição</th>
          <th>
            <%= link_to new_admins_backoffice_subject_path, class:"btn btn-success btn-circle" do %>
              <i class="fas fa-plus"></i>
            <% end %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @subjects.each do |subject| %>
        <tr>
          <td><%= subject.id %></td>
          <td><%= subject.description %></td>
          <td>
            <%= link_to edit_admins_backoffice_subject_path(subject), class:"btn btn-primary btn-circle" do %>
              <i class="fas fa-edit"></i>
            <% end %>
            <%= link_to admins_backoffice_subject_path(subject), method: :delete, class:"btn btn-danger btn-circle", data: { confirm: "Deseja excluir realmente", item: subject.id} do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <ul class="pagination justify-content-end">
      <%= paginate @subjects %>
    </ul>
  </div>
</div>